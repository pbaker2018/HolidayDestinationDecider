<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Where to?"
            android:layout_width="406dp"
            android:layout_height="72dp"
            android:id="@+id/whereToBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.4"
            android:fontFamily="@font/crete_round"
            android:textSize="30sp" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorAccent" android:textColor="@android:color/background_light"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="308dp"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addDestinationTxt"
            android:fontFamily="@font/crete_round" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Type new destination here ..."
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedDestinationTxt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="224dp"
            android:layout_height="215dp" app:srcCompat="@drawable/download"
            android:id="@+id/hammockPic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="397dp"
            android:layout_height="61dp"
            android:id="@+id/selectedDestinationTxt" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" android:textColor="@color/colorAccent" android:textStyle="bold"
            android:fontFamily="@font/crete_round" android:textAlignment="center"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/hammockPic"/>
    <Button
            android:text="Add Destination"
            android:layout_width="302dp"
            android:layout_height="42dp"
            android:id="@+id/addDestinationBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/addDestinationTxt"/>


</android.support.constraint.ConstraintLayout>